<html>
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="{{ base_url() }}/css/auth.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>

<body>
    <div class="section"></div>
    <main>
        <center>
            <div class="section"></div>

            <h5 class="indigo-text">Register an account.</h5>
            <div class="section"></div>

            <div class="container">
                <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
                    <form class="col s12" action="{{ path_for('auth.signup') }}" method="post">
                        {{ csrf.field | raw }}
                        <div class='row'>
                            <div class='col s12'></div>
                        </div>

                        <div class="row">
                            <div class="col s12">
                                <ul>
                                    {% for error in errors %}
                                        <li>{{ error | first }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate {{ errors.email ? 'invalid' : 'valid' }}' type='email' name='email' id='email' value="{{ old.email }}" />
                                <label for='email'>Enter your email</label>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate {{ errors.username ? 'invalid' : 'valid' }}' type='text' name='username' id='username' value="{{ old.username }}" />
                                <label for='username'>Enter your username</label>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate {{ errors.firstname ? 'invalid' : 'valid' }}' type='text' name='firstname' id='firstname' value="{{ old.firstname }}" />
                                <label for='firstname'>Enter your firstname</label>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate {{ errors.lastname ? 'invalid' : 'valid' }}' type='text' name='lastname' id='lastname' value="{{ old.lastname }}" />
                                <label for='lastname'>Enter your lastname</label>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate {{ errors.password ? 'invalid' : 'valid' }}' type='password' name='password' id='password' />
                                <label for='password'>Enter your password</label>
                            </div>
                        </div>

                        <br />
                        <center>
                            <div class='row'>
                                <button type='submit' name='btn_create' class='col s12 btn btn-large waves-effect indigo'>Create account</button>
                            </div>
                        </center>
                    </form>
                </div>
            </div>
            <a href="{{ path_for('auth.signin') }}">Already have an account ?</a> | <a href="{{ path_for('home') }}">Home pagina</a>
        </center>

        <div class="section"></div>
        <div class="section"></div>
    </main>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
    {% include 'partials/flash.twig' %}
</body>
</html>